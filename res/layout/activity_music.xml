<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="100"
    android:background="@drawable/musicactivity_backgroud"
    android:baselineAligned="true"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/layout_music_l" 
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="20dp"
        >

        <LinearLayout
            android:id="@+id/layout_music_l_1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6" >

        	 <ImageView  
      		  android:id="@+id/image_music_rotate"  
      		  android:layout_width="wrap_content"  
      		  android:layout_height="wrap_content" 
       		  android:src="@drawable/circle"  
       		  android:layout_gravity="center">
       		 </ImageView> 
    	</LinearLayout>

        <LinearLayout
            android:id="@+id/layout_music_l_2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:orientation="horizontal" >

         <Button 
             android:id="@+id/button_music_mode"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:background="@drawable/mode"
             />
         <Button 
             android:id="@+id/button_music_previous"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:background="@drawable/previous"
             />
         <Button 
             android:id="@+id/button_music_contral"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:background="@drawable/pause"
             />
         <Button 
             android:id="@+id/button_music_next"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:background="@drawable/next"
             />
         <Button 
             android:id="@+id/button_music_voice"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:background="@drawable/voice"
             />
         
        </LinearLayout>

   	 	<LinearLayout
        android:id="@+id/layout_music_l_3" 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
         <TextView 
             android:id="@+id/text_music_rtime"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="00:00"
             android:textSize="25dp"
             android:layout_weight="1"
             android:layout_marginRight="30dp"
             />
         <ProgressBar 
             android:id="@+id/pgb_music"
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_weight="8"
             style="?android:attr/progressBarStyleHorizontal"
             android:max="100"
             android:progress="30"/>
         <TextView 
             android:id="@+id/text_music_ttime"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="04:17"
             android:textSize="25dp"
             android:layout_weight="1"
             android:layout_marginLeft="30dp"
             />
    	</LinearLayout>
    
    </LinearLayout>
    
    
    
    <LinearLayout
        android:id="@+id/layout_music_r" 
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        >
   	 	<LinearLayout
        android:id="@+id/layout_music_r_1" 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        >
        
    	</LinearLayout>
    	<LinearLayout
        android:id="@+id/layout_music_r_2" 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:orientation="horizontal"
        >
        </LinearLayout>
        <LinearLayout
        android:id="@+id/layout_music_r_3" 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        >
        
    	</LinearLayout>
        
    </LinearLayout>
    
   
    

</LinearLayout>
